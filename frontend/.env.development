# Development Environment Configuration
NODE_ENV=development
VITE_APP_ENV=development

# API Configuration
VITE_LOCAL_API_URL=http://localhost:5000/api
VITE_DEV_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=CADD Attendance Management
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=CADD Centre Attendance Management System

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_LAB_MANAGEMENT=true
VITE_ENABLE_DEBUG_MODE=true

# Development Settings
VITE_USE_POLLING=false
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=debug

# Performance Settings
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_HOT_RELOAD=true

# Security Settings (Development)
VITE_ENABLE_DEVTOOLS=true
VITE_STRICT_MODE=false
