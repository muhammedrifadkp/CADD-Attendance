# Staging Environment Configuration
NODE_ENV=production
VITE_APP_ENV=staging

# API Configuration
VITE_API_URL=https://your-staging-api.com/api
VITE_LOCAL_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=CADD Attendance Management (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION=CADD Centre Attendance Management System - Staging

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_LAB_MANAGEMENT=true
VITE_ENABLE_DEBUG_MODE=true

# Staging Settings
VITE_USE_POLLING=false
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=warn

# Performance Settings
VITE_ENABLE_BUNDLE_ANALYZER=true
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_HOT_RELOAD=false

# Security Settings (Staging)
VITE_ENABLE_DEVTOOLS=true
VITE_STRICT_MODE=true
