# Production Environment Configuration
NODE_ENV=production
VITE_APP_ENV=production

# API Configuration
VITE_API_URL=https://your-production-api.com/api
VITE_LOCAL_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=CADD Attendance Management
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=CADD Centre Attendance Management System

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_LAB_MANAGEMENT=true
VITE_ENABLE_DEBUG_MODE=false

# Production Settings
VITE_USE_POLLING=false
VITE_ENABLE_MOCK_DATA=false
VITE_LOG_LEVEL=error

# Performance Settings
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_SOURCE_MAPS=false
VITE_ENABLE_HOT_RELOAD=false

# Security Settings (Production)
VITE_ENABLE_DEVTOOLS=false
VITE_STRICT_MODE=true

# CDN Configuration (if using)
# VITE_CDN_URL=https://your-cdn.com
# VITE_ASSETS_URL=https://your-assets.com
